<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roboticize.smoothngroove"
    android:versionCode="2"
    android:versionName="1.1">

    <uses-sdk
        android:minSdkVersion="14"
        android:maxSdkVersion="23" >

    </uses-sdk>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" >
    </supports-screens>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/sng_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:debuggable="false">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="SmoothNGroove"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SmoothiesActivity"
            android:label="@string/title_activity_smoothies"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SmoothieGangActivity"
            android:label="@string/title_activity_smoothie_gang"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ContactUsActivity"
            android:label="@string/title_activity_contact_us"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".KeonAboutActivity"
            android:label="@string/title_activity_keon_about"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BrandAboutActivity"
            android:label="@string/title_activity_brand_about"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BigNBuiltActivity"
            android:label="@string/title_activity_big_nbuilt"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".NErgizersActivity"
            android:label="@string/title_activity_nergizers"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SlimNTrimActivity"
            android:label="@string/title_activity_slim_ntrim"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SweetNLowActivity"
            android:label="@string/title_activity_sweet_nlow"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
