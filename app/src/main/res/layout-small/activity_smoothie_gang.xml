<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roboticize.smoothngroove.SmoothieGangActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="360dp"
        android:src="@drawable/background_updated"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageButton"
        android:layout_above="@+id/imageButton"
        android:id="@+id/imageView18" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/header"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/footer"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton"
        android:src="@drawable/home_overlay"
        android:scaleType="fitXY"
        android:onClick="Home"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#0000"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/about_us"
        android:id="@+id/imageButton2"
        android:src="@drawable/about_overlay"
        android:onClick="aboutUs"
        android:scaleType="fitXY"
        android:contentDescription="@string/About_Us"
        android:background="#0000"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="23dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/smoothies"
        android:id="@+id/imageButton3"
        android:onClick="Smoothies"
        android:src="@drawable/smoothie_overlay"
        android:scaleType="fitXY"
        android:contentDescription="@string/Smoothies"
        android:background="#0000"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/smoothieGang"
        android:id="@+id/imageButton4"
        android:src="@drawable/social_media"
        android:scaleType="fitXY"
        android:contentDescription="@string/Smoothie_Gang"
        android:background="#0000"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="23dp"
        android:layout_above="@+id/textView4"
        android:layout_toLeftOf="@+id/imageButton5"
        android:layout_toStartOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/contactUs"
        android:id="@+id/imageButton5"
        android:onClick="contactUs"
        android:src="@drawable/contact_us_overlay"
        android:scaleType="fitXY"
        android:contentDescription="@string/Contact_Us"
        android:background="#0000"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn_takephoto"
        android:src="@drawable/camera"
        android:onClick="launchCamera"
        android:scaleType="fitXY"
        android:layout_below="@+id/imageView19"
        android:layout_centerHorizontal="true"
        android:background="#0000"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:id="@+id/imageView19"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Share"
        android:src="@drawable/share_icon"
        android:id="@+id/btn_share"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_below="@+id/imageView19"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        android:textColor="#68C1EF"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/textView2"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#68C1EF"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoothies"
        android:id="@+id/textView3"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#68C1EF"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="#Smoothie gang"
        android:id="@+id/textView4"
        android:textSize="10sp"
        android:textColor="#F00"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/textView5"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#68C1EF"
        android:layout_below="@+id/imageButton5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView24"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:src="@drawable/instructions" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton13"
        android:layout_alignParentTop="true"
        android:src="@drawable/cart_white"
        android:background="#0000"
        android:scaleType="fitXY"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5"
        android:onClick="shop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="May take a few seconds to load share feature."
        android:layout_above="@+id/imageView24"
        android:layout_centerHorizontal="true"
        android:textColor="#F00"
        android:textSize="10sp" />

</RelativeLayout>
