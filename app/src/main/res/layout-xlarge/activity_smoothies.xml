<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmoothiesActivity"
    android:weightSum="1">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="360dp"
        android:id="@+id/viewPager"
        android:src="@drawable/background_updated"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/imageButton"
        android:layout_above="@+id/imageButton"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/header"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/footer"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton"
        android:src="@drawable/home_overlay"
        android:scaleType="fitXY"
        android:onClick="Home"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="#0000"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/about_us"
        android:id="@+id/imageButton2"
        android:src="@drawable/about_overlay"
        android:scaleType="fitXY"
        android:onClick="aboutUs"
        android:contentDescription="@string/About_Us"
        android:background="#0000"
        android:layout_below="@+id/viewPager"
        android:layout_alignLeft="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton9"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/smoothies"
        android:id="@+id/imageButton3"
        android:src="@drawable/smoothie"
        android:scaleType="fitXY"
        android:contentDescription="@string/Smoothies"
        android:background="#0000"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/smoothieGang"
        android:id="@+id/imageButton4"
        android:onClick="smoothieGang"
        android:src="@drawable/social_media_overlay"
        android:scaleType="fitXY"
        android:contentDescription="@string/Smoothie_Gang"
        android:background="#0000"
        android:layout_marginRight="108dp"
        android:layout_marginEnd="108dp"
        android:layout_below="@+id/imageButton11"
        android:layout_alignRight="@+id/imageButton12"
        android:layout_alignEnd="@+id/imageButton12" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="@string/contactUs"
        android:id="@+id/imageButton5"
        android:onClick="contactUs"
        android:src="@drawable/contact_us_overlay"
        android:scaleType="fitXY"
        android:contentDescription="@string/Contact_Us"
        android:background="#0000"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        android:textColor="#68C1EF"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/textView2"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#68C1EF"
        android:layout_below="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoothies"
        android:id="@+id/textView3"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#F00"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="#Smoothie gang"
        android:id="@+id/textView4"
        android:textSize="10sp"
        android:textColor="#68C1EF"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/textView5"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="#68C1EF"
        android:layout_below="@+id/imageButton5"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageButton9"
        android:src="@drawable/nergizer"
        android:scaleType="fitXY"
        android:background="#0000"
        android:onClick="nErgizers"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3"
        android:layout_alignParentStart="false" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageButton10"
        android:src="@drawable/big_n_built"
        android:scaleType="fitXY"
        android:background="#0000"
        android:onClick="bigBuilt"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageButton11"
        android:src="@drawable/slim_n_trim"
        android:background="#0000"
        android:scaleType="fitXY"
        android:onClick="slimnTrim"
        android:layout_above="@+id/imageButton2"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_marginBottom="273dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageButton12"
        android:src="@drawable/sweet_n_low"
        android:background="#0000"
        android:scaleType="fitXY"
        android:onClick="sweetnLow"
        android:layout_alignTop="@+id/imageButton11"
        android:layout_alignRight="@+id/imageButton10"
        android:layout_alignEnd="@+id/imageButton10"
        android:layout_alignLeft="@+id/imageButton10"
        android:layout_alignStart="@+id/imageButton10" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/cart_white"
        android:onClick="shop"
        android:background="#0000"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />


</RelativeLayout>